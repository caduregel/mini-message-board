<!DOCTYPE html>

<html>

<body>
    <h1>
        <%= title%>
    </h1>
    <a href="/new">Create a message</a>
    <div class="message">

        <% messages.map(message=>{%>
            <h2>
                <%= message.user %>
            </h2>
            <p>
                <%= message.text %>
            </p>
            <br />
            <p>
                <%= message.added %>
            </p>
            <a href="/message/<%= messages.indexOf(message) %>">Open</a>
            <% }) %>
    </div>
</body>

</html>